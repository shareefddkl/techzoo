<div id="background_form">
  <div id="sub_navigation">
    <% @profile_subtab = true %>
  </div>
  <div id="home_sub_form">
        <br/> <h2 style=" background-color: rgb(84, 81, 81); width: 649px; height: 25px; margin: 5px 5px;padding: 0 0 4px; font-size: 18px; color: white; "><b style="font-style:italic; margin: 5px 20px;float: left;">Education Details</b></h2><br/>
    <div id="education_profile_sub_form" style="margin:4px 27px 28px;">
      <%= render :partial => "education_profile", :locals => {:education_type => @student.education_type.to_s.blank? ? 'in_school' : @student.education_type} %>
    </div>
    <table width="100%"  style="margin:5px 25px;">
      <tr>
        <td  class="td_profile_education">
          <input type="radio" <%= ( @student.education_type.nil? or @student.education_type.to_s=='in_school')  ? 'checked' : ''%> name="education_type"  value="in_school "  onclick="display_education_profile_form('<%= @student.id %>', 'in_school')" /> I am in school
          <br />
          <input type="radio" <%=  (@student.education_type.to_s=='college')  ? 'checked' : '' %> name="education_type" value="college" onclick="display_education_profile_form('<%= @student.id %>', 'college')" /> College student
          <br />
          <input type="radio" <%=  (@student.education_type.to_s=='pg')  ? 'checked' : '' %> name="education_type" value="pg" onclick="display_education_profile_form('<%= @student.id %>', 'pg')" /> PG student
          <br />
          <input type="radio" <%=  (@student.education_type.to_s=='phd')  ? 'checked' : '' %> name="education_type" value="phd" onclick="display_education_profile_form('<%= @student.id %>', 'phd')" /> Ph.D student
          <br />
          <input type="radio" <%=  (@student.education_type.to_s=='professional')  ? 'checked' : '' %> name="education_type" value="professional" onclick="display_education_profile_form('<%= @student.id %>', 'professional')" /> Professional
          <br />
          <input type="radio" <%= ( @student.education_type.to_s=='others')  ? 'checked' : '' %> name="education_type" value="others" onclick="display_education_profile_form('<%= @student.id %>', 'others')" /> Others

        </td>
        <td valign="top">
          <div id="education_profile_form">
            <%= render :partial => "education_profile_form", :locals => {:education_type => @student.education_type.to_s.blank? ? 'in_school' : @student.education_type} %>
          </div>
        </td>
      </tr>

    </table>
  </div>
  <%= image_tag('banner shadow.png', :style=>"height: 11px;    margin: 35px -96px 10px;    width: 962px;") %>
  <!--<img alt="" src="images/banner shadow.png" style="height: 11px;    margin: 37px -96px 10px;    width: 962px;"/>-->
</div>
