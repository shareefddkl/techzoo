<div id="main_education_form">
  <h1 style="padding:16px 10px 10px 145px; color: black; font-size: 40px">Sign Up Form</h1>
  <div id="image" style="padding-left: 7.2em; font-size: 21px; color: black;">I am a &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<em><%= image_tag('green dot.png') %></em>&nbsp;&nbsp;Mentor&nbsp;&nbsp;<%= image_tag('white dot.png') %>&nbsp;&nbsp;Learner
    <%= render :partial => "tabs" %>
    <div id="education_sub_form">
      <table>
        <tr>
          <td width="31%" valign="top">
            <input type="radio" <%= ( @student.education_type.nil? or @student.education_type.to_s=='in_school')  ? 'checked' : ''%> name="education_type"  value="in_school "  onclick="display_education_form('<%= @student.id %>', 'in_school')" /> I am in school
            <br />
            <input type="radio" <%=  (@student.education_type.to_s=='college')  ? 'checked' : '' %> name="education_type" value="college" onclick="display_education_form('<%= @student.id %>', 'college')" /> College student
            <br />
            <input type="radio" <%=  (@student.education_type.to_s=='pg')  ? 'checked' : '' %> name="education_type" value="pg" onclick="display_education_form('<%= @student.id %>', 'pg')" /> PG student
            <br />
            <input type="radio" <%=  (@student.education_type.to_s=='phd')  ? 'checked' : '' %> name="education_type" value="phd" onclick="display_education_form('<%= @student.id %>', 'phd')" /> Ph.D student
            <br />
            <input type="radio" <%=  (@student.education_type.to_s=='professional')  ? 'checked' : '' %> name="education_type" value="professional" onclick="display_education_form('<%= @student.id %>', 'professional')" /> Professional
            <br />
            <input type="radio" <%= ( @student.education_type.to_s=='others')  ? 'checked' : '' %> name="education_type" value="others" onclick="display_education_form('<%= @student.id %>', 'others')" /> Others

          </td>
          <td width="23%">
            <div id="education_form">
              <%= render :partial => "education_form", :locals => {:education_type => @student.education_type.to_s.blank? ? '' : @student.education_type} %>
            </div>
          </td>
        </tr>

      </table>
    </div>
  </div>
</div>
<%= image_tag('banner shadow.png', :style=>"height: 11px;    margin: 43px 0 19px;    width: 980px;") %>
