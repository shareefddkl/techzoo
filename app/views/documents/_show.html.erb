  <img alt="" src="/images/lcpcurrentcourseline.png" style="margin:0px 0 7px; height: 5px;width: 200px; "/>
  <% @document.discussions.each do |discussion| %>
    <table>
      <tr>
        <td style="font-size:15px; color: black;"><%=discussion.user.account_id %>&nbsp;&nbsp;&nbsp;<%= discussion.user.display_name %></td>
      </tr>
      <tr><td style="font-size:15px; color :#00A4FF;"> <%= discussion.comment%></td></tr>
