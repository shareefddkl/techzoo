<div id="video">
<div class="titletext"><table width="700" align="center" cellpadding="1" cellspacing="0" >
    <table>
    <tr>
      <td height="40"  valign="top" class="subtabhead" align="right">
      </td>
    </tr>
    <tr>
      <td height="300" bgcolor="#E9EEFA" style="border: 1px solid #7593DB;" align="center">
        <table width="95%" cellspacing="5" cellpadding="5">
          <tr>
            <td>
              <table width="85%" class="griditem" cellspacing="4" cellpadding="5" >
                <tr>
                  <td>
                    <%= form_for([@course,@video],  :html => { :multipart => true }) do |f| %>
                      <table width="80%" class="griditem" cellspacing="4" cellpadding="5">
                        <tr>
                          <td>Title :</td>
                          <td><%= f.text_field :title, :size => '25x2'  %>
                            <%= validation_error(@video.errors[:title]) %>
                          </td>
                        </tr>
                        <tr>
                          <td>Description:</td>
                          <td><%= f.text_field :description, :size => '25x2'  %>
                            <%= validation_error(@video.errors[:title]) %>
                          </td>
                        </tr>
                        <tr>
                          <td>Video :</td>
                          <td><%= f.file_field :video %>
                            <%= validation_error(@video.errors[:video]) %>
                          </td>
                        </tr>
                        <tr>
                          <td></td>
                          <td></td>
                        </tr>
                        <tr>
                          <td></td>
                          <td>
                            <%= f.submit @video.new_record? ? 'Create' : 'Update', :class => 'help_button' %>
                            <%= button_to_function 'Cancel',  "window.location.href= '#{course_design_courses_path(@course)}'", :class => 'help_button'  %></td>
                        </tr>
                      </table>
                    <% end %>
                  </td>
                </tr>
              </table></td>
          </tr>
        </table>
        <br />
      </td>
    </tr>
    </table></table>></div>
</div>







