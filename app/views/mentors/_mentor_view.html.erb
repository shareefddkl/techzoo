<table width="100%" border="0" cellpadding="10" cellspacing="0" style="background: wheat;margin: 0 10px 10px -28px; font-size: 12px;">
  <tr>
    <td>
      <table  width="70%" border="0" cellpadding="4px" cellspacing="0"  style="">
        <tr>
          <td>IDCode:</td>
          <td><%=link_to @mentor.user.account_id, mentor_path(@mentor.id)%></td>
        </tr>
        <tr>
          <td>Name:</td>
          <td><%=link_to @mentor.user.display_name, mentor_path(@mentor.id)%></td>
        </tr>
        <tr>
          <td>Type:</td>
          <td><%=@mentor.user.user_type%></td>
        </tr>
        <tr>
          <td>Category:</td>
          <td><%=@mentor.education_type%></td>
        </tr>
      </table>
    </td>
    <td>
      <table width="75%" border="0" cellpadding="4px" cellspacing="0"  style="margin: 0 33px 0 0 ;">
        <tr>
          <td>Last login:</td>
          <td><% if !@mentor.user.last_logged_in_at.blank? %><%=@mentor.user.last_logged_in_at%><%end%></td>
        </tr>
        <tr>
          <td>No of courses:</td>
          <td><%=@mentor.user.courses.count%></td>
        </tr>
        <tr>
          <td>No of free courses:</td>
          <td><%=@mentor.user.courses.where('course_fee = "free"').count%></td>
        </tr>
        <tr>
          <td>No of Paid courses:</td>
          <td><%=@mentor.user.courses.where('course_fee = "paid"').count%></td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td>
      <table width="83%" border="0" cellpadding="4px" cellspacing="0"  style="">
        <tr>
          <td>List Of Courses:</td>
          <td></td>
        </tr>
        <%@mentor.user.courses.each do |course|%>
          <tr>
            <td><%=course.name%>:</td>
            <td><%= course.start_date %>&nbsp;&nbsp;&nbsp;<%= course.end_date %></td>
          </tr>
        <%end%>
      </table>
    </td>
    <td>
    </td>
  </tr>
  <tr>
    <td>
      <table width="83%" style="font-size: 16px;">
        <tr>
          <td><%= link_to "Delete",mentor_delete_mentors_path(@mentor.id) %></td>
          <td><%= link_to "Block",""%></td>
          <td><%= link_to "Message",""%></td>
        </tr>
      </table>
    </td>
    <td></td>
  </tr>
</table>