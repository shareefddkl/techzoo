          <%= image_tag('circle divider.png', :class => "education_divider") %>
        <%else%>
          <%= link_to "Personal Details", edit_mentor_path(mentor), :class => "personal_details" %>
          <%= link_to "Education Details", education_mentor_path(mentor), :class => "education_details" %>
