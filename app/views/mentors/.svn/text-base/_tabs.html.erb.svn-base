  <%#= link_to image_tag("ed details white button.png", :alt => "Education", :width => 100, :height => 50, :title => "Education", :border=>0), education_mentor_path(mentor) %>
  <%#= link_to image_tag("other white button.png", :alt => "Others", :width => 100, :height => 50, :title => "Others", :border=>0), others_mentor_path(mentor) %>
      <% else %>
        <%= link_to "Personal Details", new_mentor_path(), :class => "personal_button"  %>
        Education
