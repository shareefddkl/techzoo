<%=form_tag update_password_user_path(params[:id]), :method => :put do %>
<%= hidden_field_tag(:reset_password_code => params[:id]) %>
<table width="30%" align="center" cellpadding="5px" cellspacing="0px" border="0" style="margin-top: 10%;font-size: 15px;background-color: #11405F;color:#ffffff;padding: 1px;">
  <tr>
      <td style="padding-left: 5px;">
        Reset Password
      </td>
    </tr>
  <tr style="background-color:#FFFFFF;color:black;height: 20px;">
    <td>Password*:</td>
    <td><%=  password_field_tag :password  %> </td>
  </tr>
  <tr style="background-color:#FFFFFF;color:black;height: 20px;">
    <td>Confirm Password*:</td>
    <td><%=  password_field_tag :password_confirmation %></td>
    <td><%= button_to "Reset Password", login_path %></td>
  </tr>
</table>
<%end%>