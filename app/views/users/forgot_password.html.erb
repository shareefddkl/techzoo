
<%= form_tag send_reset_password_instructions_users_path, :method => :post do %>
  <table width="30%" align="center" cellpadding="5px" cellspacing="0px" border="0" style="margin-top: 10%;font-size: 15px;background-color: #11405F;color:#ffffff;padding: 1px;">
    <tr>
      <td style="padding-left: 50px;">
        Reset Password
      </td>
    </tr>
    <tr style="background-color:#FFFFFF;color:black;height: 20px;">
      <td>Email ID*: <%= text_field_tag :email %></td>
     
    </tr>
    <tr>
      <td style="background-color:#FFFFFF;color:black;height: 20px;">
<%= submit_tag "Submit"%>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <%= link_to "Cancel", login_path %>
      </td>
    </tr>
  </table>
<% end %>